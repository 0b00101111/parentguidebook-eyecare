<script is:inline>
  // Set theme ASAP to avoid flash.
  (() => {
    try {
      const stored = localStorage.getItem('theme');
      const prefersDark =
        window.matchMedia &&
        window.matchMedia('(prefers-color-scheme: dark)').matches;
      const theme = stored === 'dark' || stored === 'light'
        ? stored
        : prefersDark
          ? 'dark'
          : 'light';
      document.documentElement.dataset.theme = theme;
    } catch {
      // ignore
    }
  })();
</script>

